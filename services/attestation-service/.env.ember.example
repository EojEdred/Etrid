# Attestation Service - Ember Testnet Configuration

# Chain Connections
SUBSTRATE_WS_URL=wss://ember-rpc.etrid.io
SUBSTRATE_CHAIN_ID=2
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_CHAIN_ID=11155111

# Attester Configuration (CHANGE FOR EACH SERVICE INSTANCE)
ATTESTER_PRIVATE_KEY=your_attester_private_key_here
ATTESTER_ADDRESS=0xYourAttesterAddress
ATTESTER_ID=0  # Change to 1, 2, 3, 4 for other instances

# Contract Addresses (from Sepolia deployment)
EDSC_TOKEN_ADDRESS=0xDeployedEDSCAddress
ATTESTER_REGISTRY_ADDRESS=0xDeployedAttesterRegistryAddress
MESSAGE_TRANSMITTER_ADDRESS=0xDeployedMessageTransmitterAddress
TOKEN_MESSENGER_ADDRESS=0xDeployedTokenMessengerAddress

# Service Configuration
PORT=3000
LOG_LEVEL=info
REDIS_URL=redis://localhost:6379  # Optional, for production

# Thresholds
MIN_SIGNATURES=3
TOTAL_ATTESTERS=5
CONFIRMATIONS_REQUIRED=12  # Sepolia: ~3 minutes

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
