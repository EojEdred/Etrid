# EDSC Attestation Service Configuration

# ======================================
# Chain Connections
# ======================================

# Ã‹trid Substrate WebSocket URL
SUBSTRATE_WS_URL=ws://localhost:9944

# Ethereum RPC URL (HTTP or WebSocket)
ETHEREUM_RPC_URL=http://localhost:8545

# ======================================
# Attester Identity
# ======================================

# Your attester ID (0-based index in the attester registry)
ATTESTER_ID=0

# Your attester's Ethereum address (for verification)
ATTESTER_ADDRESS=0x1234567890123456789012345678901234567890

# Your attester's private key (ECDSA secp256k1 for Ethereum, also used for SR25519 seed)
# WARNING: Keep this secret! Use environment-specific secure key management in production
ATTESTER_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ======================================
# Signature Thresholds
# ======================================

# Minimum number of signatures required for attestation (M in M-of-N)
MIN_SIGNATURES=3

# Total number of attesters in the network (N in M-of-N)
TOTAL_ATTESTERS=5

# ======================================
# Security Settings
# ======================================

# Number of block confirmations to wait before processing events
# Higher values = more secure but slower
CONFIRMATIONS_REQUIRED=2

# ======================================
# Contract Addresses
# ======================================

# Ethereum TokenMessenger contract address (for monitoring MessageSent events)
TOKEN_MESSENGER_ADDRESS=0x0000000000000000000000000000000000000000

# ======================================
# API Settings
# ======================================

# Port for the REST API server
PORT=3000

# Logging level (error, warn, info, debug)
LOG_LEVEL=info
