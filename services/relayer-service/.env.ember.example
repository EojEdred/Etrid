# Relayer Service - Ember Testnet Configuration

# Attestation Services
ATTESTATION_SERVICE_URLS=https://att1.etrid.io,https://att2.etrid.io,https://att3.etrid.io

# Chain Connections
SUBSTRATE_WS_URL=wss://ember-rpc.etrid.io
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Relayer Wallet (needs both Sepolia ETH and Ember EDSC for gas)
RELAYER_PRIVATE_KEY=your_relayer_private_key_here
RELAYER_ADDRESS=0xYourRelayerAddress

# Contract Addresses (from Sepolia deployment)
MESSAGE_TRANSMITTER_ADDRESS=0xDeployedMessageTransmitterAddress
TOKEN_MESSENGER_ADDRESS=0xDeployedTokenMessengerAddress

# Polling Configuration
POLL_INTERVAL_MS=10000  # 10 seconds
MAX_RETRIES=3
RETRY_DELAY_MS=30000    # 30 seconds

# Gas Configuration
GAS_LIMIT=500000
GAS_PRICE_MULTIPLIER=1.2  # 20% above current gas price

# API Server
ENABLE_API=true
API_PORT=3001

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9091
