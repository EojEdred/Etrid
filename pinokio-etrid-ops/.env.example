# Etrid Operations Center - Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
PORT=8080

# Database
DATABASE_PATH=/data/etrid/etrid-data.db

# JWT Authentication (IMPORTANT: Change these in production!)
JWT_SECRET=change-this-to-a-random-string-in-production
JWT_ACCESS_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# Telegram Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Alerts
DISCORD_WEBHOOK_URL=

# Email Configuration (for password reset and alerts)
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=Etrid Ops <noreply@etrid.org>
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_TO=

# SSH / Tailscale Configuration
USE_TAILSCALE=true
TAILSCALE_DOMAIN=                    # Optional: your-tailnet.ts.net for MagicDNS
SSH_KEY_PATH=~/.ssh/id_rsa           # Path to your SSH private key
SSH_DEFAULT_USER=ubuntu              # Default SSH username

# Scheduler
SCHEDULER_ENABLED=true
HEALTH_CHECK_INTERVAL=*/5 * * * *
METRICS_INTERVAL=*/10 * * * *

# Security
# Add passcode for remote access (optional but recommended)
ACCESS_PASSCODE=

# Cloud Provider Credentials Paths (optional, can use config.json instead)
AWS_CREDENTIALS_PATH=~/.aws/credentials
GCP_KEYFILE_PATH=~/.gcp/key.json
AZURE_CREDENTIALS_PATH=~/.azure/credentials
DO_TOKEN_PATH=~/.digitalocean/token
