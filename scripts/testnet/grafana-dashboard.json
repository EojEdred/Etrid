{
  "dashboard": {
    "title": "Ã‹trid Testnet - Comprehensive Monitoring",
    "tags": ["etrid", "blockchain", "testnet", "ppfa", "flarechain"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "links": [],
    "panels": [
      {
        "id": 1,
        "title": "Block Height (All Nodes)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "substrate_block_height{job=~\"flarechain.*\"}",
            "legendFormat": "{{instance}} - Best Block",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "yaxes": [
          {"format": "short", "label": "Block Number"},
          {"format": "short"}
        ],
        "tooltip": {"shared": true}
      },
      {
        "id": 2,
        "title": "Finalized Block Height",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "substrate_finalized_height{job=~\"flarechain.*\"}",
            "legendFormat": "{{instance}} - Finalized",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yaxes": [
          {"format": "short", "label": "Block Number"},
          {"format": "short"}
        ],
        "tooltip": {"shared": true}
      },
      {
        "id": 3,
        "title": "Block Production Rate (blocks/sec)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_block_height{job=~\"flarechain.*\"}[5m])",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yaxes": [
          {"format": "ops", "label": "Blocks/sec", "min": 0},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0], "type": "lt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Block Production Stalled"
        }
      },
      {
        "id": 4,
        "title": "Finalization Rate (blocks/sec)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_finalized_height{job=~\"flarechain.*\"}[5m])",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yaxes": [
          {"format": "ops", "label": "Blocks/sec", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Finalization Lag (Unfinalized Blocks)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "substrate_block_height{job=~\"flarechain.*\"} - substrate_finalized_height{job=~\"flarechain.*\"}",
            "legendFormat": "{{instance}} - Lag",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yaxes": [
          {"format": "short", "label": "Blocks", "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 6,
        "title": "Transaction Throughput (TPS)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_proposer_number_of_transactions{job=~\"flarechain.*\"}[5m])",
            "legendFormat": "{{instance}} - TPS",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yaxes": [
          {"format": "tps", "label": "Transactions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Peer Connections",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "substrate_sub_libp2p_peers_count{job=~\"flarechain.*\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "yaxes": [
          {"format": "short", "label": "Peers", "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {
            "value": 2,
            "colorMode": "critical",
            "op": "lt",
            "fill": false,
            "line": true
          }
        ]
      },
      {
        "id": 8,
        "title": "Transaction Pool Size",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "substrate_ready_transactions_number{job=~\"flarechain.*\"}",
            "legendFormat": "{{instance}} - Ready",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
        "yaxes": [
          {"format": "short", "label": "Transactions"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Network Latency (ms)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(substrate_sub_libp2p_notifications_total_bucket[5m]))",
            "legendFormat": "{{instance}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(substrate_sub_libp2p_notifications_total_bucket[5m]))",
            "legendFormat": "{{instance}} - p50",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
        "yaxes": [
          {"format": "ms", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "PPFA Consensus - Block Construction",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_proposer_block_constructed_total{job=~\"flarechain.*\"}[5m])",
            "legendFormat": "{{instance}} - Blocks Constructed",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "yaxes": [
          {"format": "ops", "label": "Blocks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "PPFA Sealing Latency",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(substrate_proposer_block_constructed_bucket{job=~\"flarechain.*\"}[5m]))",
            "legendFormat": "{{instance}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(substrate_proposer_block_constructed_bucket{job=~\"flarechain.*\"}[5m]))",
            "legendFormat": "{{instance}} - p50",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "yaxes": [
          {"format": "s", "label": "Seconds"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "CPU Usage (%)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\"flarechain.*\"}[5m]) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 40},
        "yaxes": [
          {"format": "percent", "label": "CPU", "max": 100, "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": false
          }
        ]
      },
      {
        "id": 13,
        "title": "Memory Usage (GB)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\"flarechain.*\"} / 1024 / 1024 / 1024",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 40},
        "yaxes": [
          {"format": "decgbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 14,
        "title": "Disk I/O Operations",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_state_db_cache_bytes{job=~\"flarechain.*\"}[5m])",
            "legendFormat": "{{instance}} - DB Cache",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 40},
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 15,
        "title": "Network Bandwidth In (MB/s)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_sub_libp2p_network_bytes_total{direction=\"in\",job=~\"flarechain.*\"}[5m]) / 1024 / 1024",
            "legendFormat": "{{instance}} - Inbound",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 7, "w": 12, "x": 0, "y": 48},
        "yaxes": [
          {"format": "MBs", "label": "MB/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 16,
        "title": "Network Bandwidth Out (MB/s)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(substrate_sub_libp2p_network_bytes_total{direction=\"out\",job=~\"flarechain.*\"}[5m]) / 1024 / 1024",
            "legendFormat": "{{instance}} - Outbound",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 7, "w": 12, "x": 12, "y": 48},
        "yaxes": [
          {"format": "MBs", "label": "MB/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 17,
        "title": "Active Alerts",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 7, "w": 24, "x": 0, "y": 55},
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "node",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(substrate_block_height, instance)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}: {{instance}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
