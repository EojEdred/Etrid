global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    cluster: '{{ network_name }}'
    environment: '{{ environment }}'

# Load rules
rule_files:
  - "rules/*.yml"

# Scrape configurations
scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  # Validator nodes
  - job_name: 'validators'
    static_configs:
      - targets:
{% for host in groups['validators'] | default([]) %}
          - '{{ hostvars[host]["ansible_host"] }}:{{ substrate_metrics_port }}'
{% endfor %}
        labels:
          group: 'validators'
          environment: '{{ environment }}'

  # Backup validators
  - job_name: 'backup_validators'
    static_configs:
      - targets:
{% for host in groups['backup_validators'] | default([]) %}
          - '{{ hostvars[host]["ansible_host"] }}:{{ substrate_metrics_port }}'
{% endfor %}
        labels:
          group: 'backup_validators'
          environment: '{{ environment }}'

  # RPC nodes
  - job_name: 'rpc_nodes'
    static_configs:
      - targets:
{% for host in groups['rpc_nodes'] | default([]) %}
          - '{{ hostvars[host]["ansible_host"] }}:{{ substrate_metrics_port }}'
{% endfor %}
        labels:
          group: 'rpc_nodes'
          environment: '{{ environment }}'

  # System metrics (Node Exporter) - All nodes
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['all'] %}
{% if hostvars[host]["ansible_host"] != "0.0.0.0" %}
          - '{{ hostvars[host]["ansible_host"] }}:{{ node_exporter_port }}'
{% endif %}
{% endfor %}
        labels:
          environment: '{{ environment }}'
