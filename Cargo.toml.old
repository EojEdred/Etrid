[package]
name = "etrid-runtime"
version = "0.1.0"
edition = "2021"

[dependencies]
frame-support = { version = "14.0.0", default-features = false }
frame-system = { version = "14.0.0", default-features = false } 
schnorrkel = { version = "0.9.1", default-features = false }
sp-runtime = { version = "14.0.0", default-features = false }
sp-std = { version = "14.0.0", default-features = false }
sp-core = { version = "14.0.0", default-features = false }
sp-io = { version = "14.0.0", default-features = false }
sp-api = { version = "14.0.0", default-features = false }
sp-version = { version = "14.0.0", default-features = false }
sp-npos-elections = { version = "12.0.0", features = ["std"] }

substrate-bip39 = { path = "/Users/macbook/Desktop/etrid/pallets/substrate-pallets/substrate-core/substrate-bip39" } 
pallet-accounts = { path = "/Users/macbook/Desktop/etrid/pallets/accounts/", default-features = false }
pallet-governance = { path = "/Users/macbook/Desktop/etrid/pallets/governance", default-features = false }
pallet-consensus = { path = "/Users/macbook/Desktop/etrid/pallets/consensus", default-features = false }
pallet-multichain = { path = "/Users/macbook/Desktop/etrid/pallets/multichain", default-features = false }
pallet-vm = { path = "/Users/macbook/Desktop/etrid/pallets/vm", default-features = false }

[lib]
path = "src/lib.rs"
crate-type = ["cdylib", "rlib"]

[features]
default = ["std"]
std = [
  "frame-support/std",
  "frame-system/std",
  "sp-runtime/std",
  "sp-std/std",
  "sp-core/std",
  "sp-io/std",
  "sp-api/std",
  "sp-npos-elections/std",
  "sp-version/std",
  "pallet-accounts/std",
  "pallet-governance/std",
  "pallet-consensus/std",
  "pallet-multichain/std",
  "pallet-vm/std"
]

[patch.crates-io]
substrate-bip39 = { path = "/Users/macbook/Desktop/etrid/pallets/substrate-pallets/substrate-core/substrate-bip39" } 
