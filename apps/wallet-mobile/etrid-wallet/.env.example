# PWA Configuration

# Firebase Web Configuration
# Get these values from Firebase Console → Project Settings → Your Web App
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Cloud Messaging VAPID Key
# Generate in Firebase Console → Project Settings → Cloud Messaging → Web Push certificates
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_here

# Firebase Analytics Debug Mode (set to 'true' for development)
NEXT_PUBLIC_FIREBASE_ANALYTICS_DEBUG=false

# VAPID Keys for Push Notifications (Legacy - use Firebase VAPID key above)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_public_vapid_key_here
VAPID_PRIVATE_KEY=your_private_vapid_key_here

# API Configuration
NEXT_PUBLIC_API_URL=https://api.etrid.com

# Backend Firebase Service Account (Server-side only, never expose to client)
# Download from Firebase Console → Project Settings → Service Accounts
# FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/serviceAccountKey.json
