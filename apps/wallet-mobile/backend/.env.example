# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=etrid_wallet
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d

# Blockchain Configuration
FLARECHAIN_WS_URL=wss://flarechain.etrid.io
FLARECHAIN_HTTP_URL=https://rpc.etrid.io
CHAIN_SYNC_INTERVAL=6000

# ATM Partner APIs
COINME_API_KEY=your_coinme_api_key
COINME_API_SECRET=your_coinme_api_secret
COINME_BASE_URL=https://api.coinme.com/v1

BITCOIN_DEPOT_API_KEY=your_bitcoin_depot_key
BITCOIN_DEPOT_BASE_URL=https://api.bitcoindepot.com/v1

COINFLIP_API_KEY=your_coinflip_key
COINFLIP_BASE_URL=https://api.coinflip.tech/v1

# GPU Rental APIs
VAST_AI_API_KEY=your_vast_ai_key
RUNPOD_API_KEY=your_runpod_key

# Notification Services
EXPO_ACCESS_TOKEN=your_expo_access_token
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@etrid.io

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token
GA_TRACKING_ID=your_ga_tracking_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Cache TTL (in seconds)
CACHE_BALANCE_TTL=300
CACHE_PRICE_TTL=60
CACHE_VALIDATOR_TTL=600
CACHE_PROPOSAL_TTL=120
