// distribution_execution.rs

pub fn calculate_rewards(stake: u64, coinage: u64, reward_rate: f64) -> u64 {
    ((stake as f64 * reward_rate) * (coinage as f64 / 365.0)).round() as u64
}

pub fn apply_penalties(base_reward: u64, missed_votes: u32, penalty_rate: f64) -> u64 {
    let penalty = (missed_votes as f64 * penalty_rate * base_reward as f64).round() as u64;
    base_reward.saturating_sub(penalty)
}