# AI API Keys (choose one or both for redundancy)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# Notion Integration (for governance docs sync)
NOTION_API_KEY=secret_your-notion-integration-key
NOTION_DATABASE_ID=your-database-id-here

# Grafana Admin Password
GRAFANA_PASSWORD=admin

# Blockchain Connection (usually leave as-is for Docker)
ETRID_WS_URL=ws://etrid-node:9944

# Vector DB Connection (usually leave as-is for Docker)
VECTORDB_URL=http://vectordb:6333

# LLM Configuration
LLM_BACKEND=claude  # Options: claude, gpt, local
LLM_MODEL=claude-sonnet-4  # or gpt-4, llama2, etc.
LLM_MAX_TOKENS=4096

# AI Dev Configuration
LOG_LEVEL=info  # debug, info, warning, error
SKILL_EXECUTION_TIMEOUT=300  # seconds
MAX_CONCURRENT_SKILLS=5

# Local LLM (Ollama) - if using local backend
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama2
