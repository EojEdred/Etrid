# Polygon Deployment Configuration
# Copy this file to .env and fill in your values
# CRITICAL: Keep your private key secret! Never commit .env to git!

PRIVATE_KEY=your_private_key_here

# RPC Endpoints (optional - defaults provided)
POLYGON_TESTNET_RPC=https://rpc-amoy.polygon.technology
POLYGON_MAINNET_RPC=https://polygon-rpc.com

# PolygonScan API Key (for contract verification)
# Get one free at: https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Foundation Multisig Address (transfer ownership after deployment)
FOUNDATION_MULTISIG=your_multisig_address_here

# Bridge Contract Addresses (set after bridge deployments)
POLYGON_POS_BRIDGE=0xA0c68C638235ee32657e8f720a23ceC1bFc77C77
CROSS_CHAIN_BRIDGE=your_cross_chain_bridge_address_here
